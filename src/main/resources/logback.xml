<?xml version="1.0" encoding="UTF-8"?>
    <configuration>
    	<appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
    		<encoder>
    			<Pattern>.%d{yyyy/MM/dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg %n
    			</Pattern>
    		</encoder>
    		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
    			<level>INFO</level>
    		</filter>
    	</appender>

      	<appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    		<!-- >File>c:/tmp/interswitchNameEnguiry.log</File-->
    		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
    		    <!-- daily rollover -->
    			<FileNamePattern>/u01/app/oracle/config/properties/logs/eTranzactTse.%d{yyyy-MM-dd}.log</FileNamePattern>

    			<!-- keep 30 days' worth of history -->
    			<maxHistory>30</maxHistory>			
    		</rollingPolicy>

    		<encoder>
    			<Pattern>%d{yyyy/MM/dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</Pattern>
    		</encoder> 	    
      	</appender>
      	
      	<appender name="dailyInfoRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    		<!-- >File>c:/tmp/interswitchNameEnguiry.log</File-->
    		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
    		    <!-- daily rollover -->
    			<FileNamePattern>/u01/app/oracle/config/properties/logs/eTranzactTseInfo.%d{yyyy-MM-dd}.log</FileNamePattern>

    			<!-- keep 30 days' worth of history -->
    			<maxHistory>30</maxHistory>			
    		</rollingPolicy>

    		<encoder>
    			<Pattern>%d{yyyy/MM/dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</Pattern>
    		</encoder> 	    
      	</appender>
      	
    	<logger name="com.ubn" additivity="true">
    	    <level value="INFO" />
    		<appender-ref ref="dailyRollingFileAppender"/>
    	</logger>

    	 <root>
    		<level value="INFO" />
    		<appender-ref ref="consoleAppender" />
			<appender-ref ref="dailyInfoRollingFileAppender"/>
    	 </root>
    </configuration>
  